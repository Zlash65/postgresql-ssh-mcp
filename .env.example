# PostgreSQL MCP Server configuration.
# Copy to .env and edit as needed.

# Database (use DATABASE_URI or the individual fields below)
DATABASE_URI="postgresql://postgres:postgres@db.example.com:5432/postgres"

# DATABASE_HOST="db.example.com"
# DATABASE_PORT="5432"
# DATABASE_NAME="postgres"
# DATABASE_USER="postgres"
# DATABASE_PASSWORD="postgres"

# SSL/TLS
# DATABASE_SSL="false"
# DATABASE_SSL_CA="/path/to/ca.pem"
# DATABASE_SSL_REJECT_UNAUTHORIZED="true"

# SSH tunnel (optional)
# SSH_ENABLED="true"
# SSH_HOST="bastion.example.com"
# SSH_PORT="22"
# SSH_USER="ubuntu"
# SSH_PRIVATE_KEY_PATH="~/.ssh/id_rsa"
# SSH_PRIVATE_KEY_PASSPHRASE=""
# SSH_PASSWORD="password"
# SSH_STRICT_HOST_KEY="true"
# SSH_TRUST_ON_FIRST_USE="true"
# SSH_KNOWN_HOSTS_PATH="~/.ssh/known_hosts"
# SSH_KEEPALIVE_INTERVAL="10000"

# Server options
READ_ONLY="true"
QUERY_TIMEOUT="30000"
MAX_ROWS="1000"
