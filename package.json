{
  "name": "postgresql-ssh-mcp",
  "version": "1.0.0",
  "description": "PostgreSQL MCP Server with built-in SSH tunneling for secure database access through bastion hosts",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "postgresql-ssh-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "test": "vitest run",
    "test:docker": "bash scripts/test-docker.sh",
    "test:unit": "vitest run --dir tests/unit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "postgresql",
    "postgres",
    "ssh",
    "tunnel",
    "database",
    "model-context-protocol",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "pg": "^8.13.1",
    "pg-connection-string": "^2.7.0",
    "ssh2": "^1.16.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/ssh2": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.17.0",
    "globals": "^16.5.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
